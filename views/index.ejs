<%- include('./templates/head') %> <%- include('./templates/header') %>
<%- include('category-bar') %>

<!-- add list of items for each menu -->
<div class="row">
  <% pizzas.forEach( pizza => { %> <% let cateName =
  pizza.category[0].name %>
