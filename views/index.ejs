    class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center pizza mt-5"
  >
    <a href="/detail/<%= pizza._id %>">
      <img
        class="pizza-img"
        src="img/<%= cateName %>/<%= pizza.name %>.png"
        alt="pizza-img"
      />
      <h4 class="item-name"><%= pizza.name %></h4>
      <p class="price">Â£<span class="item-price"><%= pizza.price.toFixed(2) %></span></p>

    </a>
      <div>
        <a href="/add-to-cart/<%= pizza._id %>"><button class="btn btn-outline-secondary addToCart">
          <img src="img/icon/shopping-bag.svg" alt="shopping-bag" width="10px">
          Add to cart</button></a>
        <a href="/buy-now/<%= pizza._id %>"><button class="btn btn-success">Buy now</button></a>
      </div>
  </div>

  <% }) %>
</div>


